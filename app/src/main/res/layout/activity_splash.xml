<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_200"
        tools:context=".SplashActivity">


        <TextView
            android:id="@+id/offline"
            android:layout_margin="8dp"
            android:background="@drawable/style_txt_offline"
            android:padding="8dp"
            android:text="OFFLINE"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/font1"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/online"
            android:layout_margin="8dp"
            android:background="@drawable/style_txt_online"
            android:padding="8dp"
            android:text=" ONLINE "
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:fontFamily="@font/font1"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/logo"
            android:layout_centerInParent="true"
            android:rotation="30"
            android:src="@drawable/logo"
            android:layout_width="120dp"
            android:layout_height="120dp"/>


        <TextView
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/logo"
            android:text="Namayesh"
            android:textColor="@color/purple_700"
            android:textStyle="bold"
            android:fontFamily="@font/font1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/progress_bar"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_centerHorizontal="true"
            style="@style/SpinKitView.Small.Circle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/productby"
            android:layout_marginBottom="8dp"
            app:SpinKit_Color="@color/title_text" />




        <TextView
            android:id="@+id/productby"
            android:text="POWERED BY hamidreza karami"
            android:layout_marginTop="50dp"
            android:textColor="@color/purple_500"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/font1"
            android:textSize="8sp"
            android:layout_marginBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</layout>
