<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="MoviePlayActivity"
            type="com.example.namayesh.MoviePlayActivity" />

        <variable
            name="OnClickViewListeneronMoviePlayActivity"
            type="com.example.namayesh.MoviePlayActivity.OnClickViewListeneronMoviePlayActivity" />

    </data>

    <RelativeLayout
        android:id="@+id/parent"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MoviePlayActivity">

        <VideoView
            android:id="@+id/videoview"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>


        <FrameLayout
            android:id="@+id/spin_kit"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_centerInParent="true"
            style="@style/SpinKitView.Small.Circle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/title_text" />

        </FrameLayout>

    </RelativeLayout>

</layout>
