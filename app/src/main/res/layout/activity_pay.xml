<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="PayActivity"
            type="com.example.namayesh.PayActivity" />

        <variable
            name="OnClickViewListenerOnPayActivity"
            type="com.example.namayesh.PayActivity.OnClickViewListenerOnPayActivity" />

    </data>


    <RelativeLayout
        android:background="@color/purple_500"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PayActivity">


        <LinearLayout
            android:id="@+id/list1"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_time1_pay_activity"
                android:onClick="@{(v) -> OnClickViewListenerOnPayActivity.onClickTime(v,PayActivity)}"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/teal_200"
                android:layout_weight="0.35"
                android:layout_width="0dp"
                android:layout_height="100dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/time1"
                        android:padding="8dp"
                        android:textSize="24sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/title_text"
                        android:textStyle="bold"
                        android:text="1 Day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:background="@color/purple_500"
                        android:layout_below="@+id/time1"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/price1"
                        android:layout_below="@+id/time1"
                        android:text="1500 T"
                        android:background="@drawable/style_txt_online"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:layout_margin="8dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_time2_pay_activity"
                android:onClick="@{(v) -> OnClickViewListenerOnPayActivity.onClickTime(v,PayActivity)}"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/teal_200"
                android:layout_weight="0.35"
                android:layout_width="0dp"
                android:layout_height="100dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/time2"
                        android:padding="8dp"
                        android:textSize="24sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/title_text"
                        android:textStyle="bold"
                        android:text="1 Week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:background="@color/purple_500"
                        android:layout_below="@+id/time2"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/price2"
                        android:layout_below="@+id/time2"
                        android:text="8500 T"
                        android:background="@drawable/style_txt_online"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:layout_margin="8dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_time3_pay_activity"
                android:onClick="@{(v) -> OnClickViewListenerOnPayActivity.onClickTime(v,PayActivity)}"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/teal_200"
                android:layout_weight="0.35"
                android:layout_width="0dp"
                android:layout_height="100dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/time3"
                        android:padding="8dp"
                        android:textSize="23sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/title_text"
                        android:textStyle="bold"
                        android:text="1 Mounth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:background="@color/purple_500"
                        android:layout_below="@+id/time3"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/price3"
                        android:layout_below="@+id/time3"
                        android:text="32000 T"
                        android:background="@drawable/style_txt_online"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:layout_margin="8dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/list2"
            android:layout_below="@+id/list1"
            android:layout_margin="8dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_time4_pay_activity"
                android:onClick="@{(v) -> OnClickViewListenerOnPayActivity.onClickTime(v,PayActivity)}"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/teal_200"
                android:layout_weight="0.35"
                android:layout_width="0dp"
                android:layout_height="100dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/time4"
                        android:padding="8dp"
                        android:textSize="23sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/title_text"
                        android:textStyle="bold"
                        android:text="3 mounth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:background="@color/purple_500"
                        android:layout_below="@+id/time4"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/price4"
                        android:layout_below="@+id/time4"
                        android:text="90000 T"
                        android:background="@drawable/style_txt_online"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:layout_margin="8dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_time5_pay_activity"
                android:onClick="@{(v) -> OnClickViewListenerOnPayActivity.onClickTime(v,PayActivity)}"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/teal_200"
                android:layout_weight="0.35"
                android:layout_width="0dp"
                android:layout_height="100dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/time5"
                        android:padding="8dp"
                        android:textSize="23sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/title_text"
                        android:textStyle="bold"
                        android:text="6 mounth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:background="@color/purple_500"
                        android:layout_below="@+id/time5"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/price5"
                        android:layout_below="@+id/time5"
                        android:text="170000 T"
                        android:background="@drawable/style_txt_online"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:layout_margin="8dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_time6_pay_activity"
                android:onClick="@{(v) -> OnClickViewListenerOnPayActivity.onClickTime(v,PayActivity)}"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/teal_200"
                android:layout_weight="0.35"
                android:layout_width="0dp"
                android:layout_height="100dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/time6"
                        android:padding="8dp"
                        android:textSize="23sp"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/title_text"
                        android:textStyle="bold"
                        android:text="1 Year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <View
                        android:background="@color/purple_500"
                        android:layout_below="@+id/time6"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"/>

                    <TextView
                        android:id="@+id/price6"
                        android:layout_below="@+id/time6"
                        android:text="320000 T"
                        android:background="@drawable/style_txt_online"
                        android:padding="8dp"
                        android:textSize="16sp"
                        android:textStyle="bold|italic"
                        android:layout_margin="8dp"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/previous_credit"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            android:layout_below="@+id/list2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Your previous Credit :"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt_previous_credit_pay_activity"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text="360 days"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/bought_credit"
            app:cardCornerRadius="10dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_below="@+id/previous_credit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="Purchased subscription :"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt_bought_credit_pay_activity"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text=""
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/current_credit"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_below="@+id/bought_credit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="13sp"
                    android:text="Your credit after purchase :"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/txt_current_credit_pay_activity"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:text=""
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/btn_purchase_pay_activity"
            android:onClick="@{(v) -> OnClickViewListenerOnPayActivity.onClickTime(v,PayActivity)}"
            android:text="Purchased subscription"
            android:layout_marginTop="48dp"
            android:backgroundTint="@color/teal_200"
            android:textColor="@color/title_text"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/current_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</layout>
